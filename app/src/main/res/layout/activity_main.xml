<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

        <ImageButton
            android:id="@+id/ib_simple"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:background="@drawable/simple"
            android:scaleType="fitCenter" />

        <ImageButton
            android:id="@+id/ib_try_limited"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:scaleType="fitCenter"
            android:background="@drawable/try_limited"
            android:layout_marginTop="70dp"/>

        <ImageButton
            android:id="@+id/ib_time_limited"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:scaleType="fitCenter"
            android:background="@drawable/time_limited"
            android:layout_marginTop="70dp"/>

        <ImageButton
            android:id="@+id/ib_one_try"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:scaleType="fitCenter"
            android:background="@drawable/one_try"
            android:layout_marginTop="70dp"/>
    </LinearLayout>


</LinearLayout>